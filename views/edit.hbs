<div class="container d-flex justify-content-center">
  <form action="/records/{{record._id}}?_method=PUT" method="POST" style="display: inline;">
    <table class="table table-borderless" style="width:500px;">
      <tr>
        <th class="text-center align-middle">名稱</th>
        <td><input class="form-control form-control-sm" type="text" value="{{record.name}}" name="name" style='width: 300px;' required>
        </td>
      </tr>
      <tr>
        <th class="text-center align-middle">日期</th>
        <td>
          <input class="form-control form-control-sm" type="date" value="{{record.date}}" name="date" style='width: 300px;' required>
        </td>
      </tr>
      <tr>
        <th class="text-center align-middle">類別</th>
        <td><select class="form-select form-select-sm" size="1" name="category" style="width: 300px;" required>
            <option selected hidden>{{record.category}}</option>
            {{#each categories}}
            <option value="{{this.name}}">{{this.name}}</option>
            {{/each}}
          </select></td>
      </tr>
      <tr>
        <th class="text-center align-middle">金額</th>
        <td><input class="form-control form-control-sm" type="text" value="{{record.amount}}" name="amount"
            style='width: 300px;' required>
        </td>
      </tr>
    </table>
    <button type="submit" class="ms-3 btn btn-primary btn-block">修改</button>
  </form>
</div>